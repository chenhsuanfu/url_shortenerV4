{{#if shortenerURL}}
 <div class="result">
    <h3>Success! Please use this link:</h3>
    <p id="generateURL">{{host}}/{{shortenerURL}}</p>
 </div>
 <button class="copy" onclick="copy()">Copy</button>

 <script>
    function copy() {
        const URL = document.getElementById("generateURL")
        navigator.clipboard.writeText(URL.innerText)
            .then(() => alert('copied'))
            .catch(error => console.log(error))
    }
 </script>

{{else}}
<form method="POST" action="/">
    <div class="container">
        <input type="url" name="url" placeholder="Input URL here"  required>
        <button class="shortenerURL" type="submit">Shorten</button>
    </div>
</form>

{{/if}}
